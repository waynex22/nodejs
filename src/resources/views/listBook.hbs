{{#each books}}
<a href="/book/{{this._id}}" class="flex items-center mt-4 bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl">
    <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg" src="{{this.image}}" alt="">
    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text-xl font-bold tracking-tight text-gray-600">{{this.title}}</h5>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">Tac gia :{{this.author}}</p>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">Nam xuat ban: {{this.year}}</p>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"> So isbn: {{this.isbn}}</p>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">Danh gia : {{this.review_count}}</p>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">Diem so :{{this.average_score}}</p>
    </div>
</a>

{{/each}}